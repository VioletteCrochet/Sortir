{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connectez-vous : </h1>
        <label for="email">Email : </label>
        <input type="email" value="{{ last_email }}" name="_username" id="email" class="form-control"
               autocomplete="email" required autofocus>
        <label for="password">Mot de passe : </label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
               required>

        <div class="checkbox mb-3">
            <input type="checkbox" name="_remember_me" id="_remember_me">
            <label for="_remember_me">Se souvenir de moi</label>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        {% if is_granted('IS_AUTHENTICATED') == false %}
        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>

        <a href="{{ path('app_register') }}">S'inscrire</a>
        {% endif %}
    </form>
{% endblock %}
